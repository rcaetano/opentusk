# OpenTusk Configuration
# Copy this file to config.env and fill in your values:
#   cp config.env.example config.env
#
# Or run `./opentusk init` to generate config.env interactively.

# ─── DigitalOcean ────────────────────────────────────────────────────────────
DIGITALOCEAN_ACCESS_TOKEN=""          # DO API token (https://cloud.digitalocean.com/account/api/tokens)
DO_DROPLET_NAME="opentusk"            # Name for the droplet
DO_REGION="fra1"                      # DO region (e.g., nyc1, sfo3, fra1)
DO_SIZE="s-2vcpu-4gb"                 # Droplet size (s-4vcpu-8gb recommended for builds)
DO_SSH_KEY_FINGERPRINT=""             # SSH key fingerprint (blank = auto-detect)
DO_SSH_KEY_FILE=""                   # Local SSH private key path (blank = ssh-agent default)

# ─── Poseidon ────────────────────────────────────────────────────────────────
POSEIDON_REPO=""                      # Git SSH URL for your Poseidon repo
POSEIDON_BRANCH="main"               # Branch to clone/pull

# ─── Tailscale (optional) ────────────────────────────────────────────────────
TAILSCALE_ENABLED=false               # Enable Tailscale on deploy (true/false)
TAILSCALE_AUTH_KEY=""                  # Reusable auth key (tskey-auth-...) from Tailscale admin
TAILSCALE_MODE="serve"                # "serve" (tailnet-only) or "funnel" (public internet)
